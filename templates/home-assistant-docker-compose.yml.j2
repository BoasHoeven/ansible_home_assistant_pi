# {{ ansible_managed }}
---
version: "3.5"

services:
  hass:
    image: homeassistant/home-assistant:latest
    container_name: hass
    volumes:
      - /home/pi/home-assistant/config:/config
      - /etc/localtime:/etc/localtime:ro
      - /run/dbus:/run/dbus:ro
    environment:
      - TZ='{{ container_timezone }}'
    privileged: true
    network_mode: host
    cap_add:
      - NET_ADMIN  # Required for adding new routes
    restart: unless-stopped
    healthcheck:
      test: "curl -Lf http://localhost:8123"
      start_period: 6m
      timeout: 15s
      interval: 30s
      retries: 3